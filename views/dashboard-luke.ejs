<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Luke <%= number %></title>
    <link rel="stylesheet" href="/css/dashboard.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/javascript/chart.js" defer></script>
</head>
<body>
    <div class="sidebar">
        <h2>AdminBLK</h2>
        <ul>
            <li class="<%= page === 'dashboard' ? 'active' : '' %>">
                <a href="/dashboard">Dashboard</a>
            </li>
            <% for (let i = 1; i <= 24; i++) { %>
                <li class="<%= page === 'luke-' + i ? 'active' : '' %>">
                    <a href="/dashboard/<%= i %>">Luke <%= i %></a>
                </li>
            <% } %>
        </ul>
    </div>

    <div class="content">
        <div class="luke-data">
            <h2>Submissions for Luke <%= number %></h2>
            <% if (submissions.length > 0) { %>
                <div id="winner-section">
                    <h3>Winner: <span id="winner"></span></h3>
                    <button id="randomize-winner">Pick a Winner</button>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Answer</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% submissions.forEach(submission => { %>
                            <tr data-id="<%= submission._id %>">
                                <td><%= submission.epost %></td>
                                <td><%= submission.svar %></td>
                                <td class="delete-icon"></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No submissions found for Luke <%= number %>.</p>
            <% } %>
        </div>
    </div>
</body>
</html>